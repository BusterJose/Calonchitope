<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Cargo" >
<typeAlias alias="CargoDTO" type="pe.edu.unmsm.quipucamayoc.sgfqRRHH.negocio.dto.CargoDTO"/>
<resultMap class="CargoDTO" id="rsCargo">
<result property="idCargo" columnIndex="1"/>
<result property="desCargo" columnIndex="2"/>
</resultMap>

<insert id="insertCargo" parameterClass="CargoDTO">
INSERT INTO QPDATAGESTION.TB_CARGO
VALUES(#idCargo#,#desCargo#)
</insert>
<delete id="deleteCargo" parameterClass="CargoDTO">
DELETE QPDATAGESTION.TB_CARGO WHERE C_ID_CARGO=#idCargo#
</delete>
<select id="selectCargo" parameterClass="CargoDTO" resultMap="rsCargo">
SELECT C_ID_CARGO, T_DESC_CARGO
FROM QPDATAGESTION.TB_CARGO WHERE C_ID_CARGO="#idCargo#" 
</select>

<select id="obtenerMaxidCargo" resultClass="java.lang.Integer">
select max(c_id_cargo) from QPDATAGESTION.TB_CARGO 
</select>

<update id="updateCargo" parameterClass="CargoDTO">
UPDATE QPDATAGESTION.TB_CARGO
SET T_DESC_CARGO=#desCargo#
WHERE C_ID_CARGO=#idCargo#
</update>
</sqlMap>
