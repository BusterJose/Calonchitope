<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	  xmlns:h="http://java.sun.com/jsf/html"
	  xmlns:f="http://java.sun.com/jsf/core"	
	  xmlns:p="http://primefaces.prime.com.tr/ui"
	  xmlns:ui="http://java.sun.com/jsf/facelets">
<h:head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
<title>Enviar Curriculum Vitae</title>
</h:head>
<h:body style="background-image:url(#{loginController.rutaRaiz}/pages/images/fondo_login2.png);font-size:10px;">
		<h:form>
	
	<table style="width:100%; height:100%" border="0">
	<tr ><td ><h:graphicImage url="#{loginController.rutaRaiz}/pages/images/cabecera_sgfqrrhh.png" /></td>
	<td align="right">
			<p:commandLink value="Ingresar" style="color:white; font-family:Arial, Helvetica; font-size:14px" 
			action="#{publicacionController.iraLogin}" ajax="false"/>&nbsp;
			<h:outputText value="|" style="color:white; font-family:Arial, Helvetica; font-size:14px"/>&nbsp;
			<p:commandLink value="Convocatorias" style="color:white; font-family:Arial, 
			Helvetica; font-size:14px" 
			action="#{publicacionController.iraPublicaciones}" ajax="false"/>
	</td></tr>
	<tr style="height:100px"><td></td><td></td></tr>
	<tr >
	<td colspan="2" align="center"> 
	<table style="width:600px; height:550px;background-image:url(#{loginController.rutaRaiz}/pages/images/tabTranspEnvCV.png)" border="0">
		<tr><td height="60px">
		</td></tr>
		<tr><td align="center">
			<h:outputText value="#{enviarCVController.msjCV}" style="font-size:18px; color:white"/>
			
			<p:accordionPanel autoHeight="false">  
			    <p:tab title="Paso 1 (Datos Personales)">
			      <ui:include src="/WEB-INF/curriculum/cvDatosPersonales.xhtml"></ui:include>
			    </p:tab>  
			    <p:tab title="Paso 2 (Domicilio)"> 
			        <ui:include src="/WEB-INF/curriculum/cvDomicilio.xhtml"></ui:include>
			    </p:tab>  
			    <p:tab title="Paso 3 (Estudios)">
			    <p:fieldset id="fsEstudios" styleClass="ui-state-hover" legend="Ingresar Grados Academicos">
			        <table>
			        <tr>
			        	<td><h:outputText value="Estudio Universitario/Tecnico:"/></td>
			        	<td><p:inputText value="#{enviarCVController.gradAcad.estudiosUnivInst}"/></td>
			        	<td rowspan="5" align="center" width="100px">
						<p:commandButton image="ui-icon-plus" title="Anadir" actionListener="#{enviarCVController.anadirEstUnivTecn}" 
						style="width:40px;height:40px; font-size:15px;font-weight:bold;" update="cvestudios,fsEstudios"/>
						<br/><h:outputText value="#{enviarCVController.msjVacioEst}"/>  
			        	</td>
			        </tr>
			        <tr>
			        	<td><h:outputText value="Nombre de la Universidad/Instuto:"/></td>
			        	<td><p:inputText value="#{enviarCVController.gradAcad.nombreUnivInst}"/> </td>
			        </tr>
			        <tr>
			        	<td><h:outputText value="Fecha de inicio:"/></td>
			        	<td><p:calendar id="estfechini" value="#{enviarCVController.gradAcad.fechaIni}" 
			        	locale="es" pattern="dd/MM/yyyy"  maxdate="#{envioSolicitudController.fechaActual}" 
			        	navigator="true">
			        	<p:watermark for="estfechini" value="dd/mm/yyyy"/>
			        	</p:calendar> </td>
			        </tr>			        
			        <tr>
			        	<td><h:outputText value="Fecha de termino:"/></td>
			        	<td><p:calendar id="estfechfin" value="#{enviarCVController.gradAcad.fechaFin}" navigator="true" locale="es" pattern="dd/MM/yyyy">
			        	<p:watermark for="estfechfin" value="dd/mm/yyyy" />
			        	</p:calendar> </td>
			        </tr>			        
			        <tr>
			        	<td><h:outputText value="Grado academico logrado:"/></td>
			        	<td><p:inputText value="#{enviarCVController.gradAcad.nivelAcadLogr}"/> </td>
			        </tr>
			        </table>
			     </p:fieldset>    
			     <ui:include src="/WEB-INF/curriculum/cvEstudios.xhtml"></ui:include>
			    </p:tab>  
	<p:tab title="Paso 4 (Experiencias laborales)">
			    <p:fieldset id="fsExpLab" styleClass="ui-state-hover" legend="Ingresar Experiencias Laborales">
	        <table>
	        <tr>
	        	<td><h:outputText value="Nombre de la empresa:"/>
	        	</td>
	        	<td><p:inputText value="#{enviarCVController.expLab.nomEmpresa}"/> 
	        	</td>
	        	<td rowspan="5" align="center" width="100px">
				<p:commandButton image="ui-icon-plus" title="Anadir" actionListener="#{enviarCVController.anadirExpLab}" 
				style="width:40px;height:40px; font-size:15px;font-weight:bold;" update="cvtrabs,fsExpLab"/>  
				<br/><h:outputText value="#{enviarCVController.msjVacioTrab}" />
	        	</td>
	        </tr>
	        <tr>
	        	<td><h:outputText value="Actividad de la empresa:"/></td>
	        	<td><p:inputText value="#{enviarCVController.expLab.actividadEmpresa}"/> </td>
	        </tr>
	        <tr>
	        	<td><h:outputText value="Sueldo recibido:"/></td>
	        	<td><p:inputText value="#{enviarCVController.expLab.sueldo}"/> </td>
	        </tr>			        
	        <tr>
	        	<td><h:outputText value="Fecha de inicio:"/></td>
	        	<td><p:calendar id="labfechini" value="#{enviarCVController.expLab.fechaIni}" locale="es" pattern="dd/MM/yyyy" maxdate="#{envioSolicitudController.fechaActual}" 
	        	navigator="true">
	        	<p:watermark for="labfechini" value="dd/mm/yyyy" />
	        	</p:calendar> </td>
	        </tr>			        
	        <tr>
	        	<td><h:outputText value="Fecha de termino:"/></td>
	        	<td><p:calendar id="labfechfin" value="#{enviarCVController.expLab.fechaFin}" navigator="true" locale="es" pattern="dd/MM/yyyy">
	        	<p:watermark for="labfechfin" value="dd/mm/yyyy" />
	        	</p:calendar> </td>
	        </tr>
	        </table>
	        </p:fieldset>  
		   <ui:include src="/WEB-INF/curriculum/cvExperienciaLab.xhtml"></ui:include>
			    </p:tab>
			</p:accordionPanel>
			<p:commandButton value="Enviar Curriculum Vitae" oncomplete="dlgConfirm.show();"/>
			<p:confirmDialog header="Enviar CV" id="dlgConfirm" message="Esta seguro de enviar su Curriculum?" 
			widgetVar="dlgConfirm" modal="true" >
				<div align="center">
					<p:commandButton value="Si" action="#{enviarCVController.enviarCV}"  oncomplete="dlgConfirm.hide();"/>
					<p:commandButton value="No" ajax="true" onclick="dlgConfirm.hide();" />
				</div>
			</p:confirmDialog> 
			 
		</td></tr>
	</table>
	</td>
	</tr>
	</table>	
</h:form>
</h:body>
</html>