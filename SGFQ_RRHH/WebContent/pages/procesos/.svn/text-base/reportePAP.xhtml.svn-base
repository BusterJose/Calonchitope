<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	template="/pages/plantilla.xhtml">
	<ui:define name="title"> Gestion de Plazas </ui:define>
	<ui:define name="contenido">
		<f:view>
			<h:form id="formGestionServidores" prependId="false"
				style="font-size:10px;">
				 <p:tabView>
				 	 	<p:tab title="Cuadro Nominativo del Personal">
				 	 		<h:outputLabel value="AÃ±os: " for="listaAnios" />
				 	 		<p:spacer width="20px" height="10px"/>
							<h:selectOneMenu id="listaAnios" value="#{reportePAPController.anio}"
									styleClass="ui-corner-all ui-widget-content ui-state-hover">
									<f:selectItems value="#{reportePAPController.listaAnio}"
										var="ano" itemValue="#{ano}" itemLabel="#{ano}" />
							</h:selectOneMenu>
							<br/>
							<br/>
							<p:outputPanel id="panel" rendered="#{reportePAPController.perfil==1}">
								<h:outputText value="Unidad: " style="font-size:16x;" />
								<p:spacer width="10" />
								<p:outputPanel>
									<p:inputText readonly="true" id="ud_txt" style="width:300px"
										value="#{reportePAPController.nodoElegido}">
									<p:ajax event="change" update="tableEspxGen" />
									</p:inputText>
								</p:outputPanel>
								
								<p:commandButton id="deps" onclick="dlg2.show();"
									image="ui-icon ui-icon-search" title="Buscar" />
								<br/>
					   			<br/>
				     		</p:outputPanel>
							<p:commandButton id="repor" value="Ver Reporte"  ajax="false" update="msj"
								action="#{reportePAPController.mostrarPAP}" title="Reporte" />	
						</p:tab>
					</p:tabView>
					
					<p:dialog id="dlg2" header="Elegir dependencia" widgetVar="dlg2"
						height="350" width="500" resizable="false" modal="true">
						<h:outputText value="Unidades:" />
						<br />
						<br />
						<p:panel style="height:230px;overflow:auto" id="panelarbol">
							<p:tree id="arbol_dep" 
								value="#{listasController.root2}" var="node"
								selectionMode="single" selection="#{reportePAPController.selectedNode}">
								<p:treeNode>
									<h:outputText value="#{node.udCod} - #{node.udDesc}" />
								</p:treeNode>
							</p:tree>
						</p:panel>
						<br />
						<p:commandButton type="submit" value="Aceptar" update="ud_txt" 
							actionListener="#{reportePAPController.mostrarDep}" oncomplete="dlg2.hide()" />
					</p:dialog>
				<div align="center"
					style="padding-left: 200px; padding-right: 200px;">
					<p:growl id="notificacionCalificacion" showDetail="true"
						life="3000"></p:growl>
				</div>
			</h:form>
		</f:view>
	</ui:define>
</ui:composition>